@model IEnumerable<MVCCore.Models.Product>

@{
    ViewData["Title"] = "ListOfItems";
}

<h1>List of Items</h1>


<table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <b>Stock Available</b>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            
            <th>Prodct Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var itemImage = item.Name+".jpeg";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <img src="~/images/@itemImage" />
            </td>
            <td>
                @Html.ActionLink("Prodct Descrption", "Details", new { id = item.Id }) |
                @Html.ActionLink("Add the item to cart", "AddTheItemToCart", new { id = item.Id }) |
                @Html.ActionLink("Buy Now", "AddTheItemToCart", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
