@model IEnumerable<MVCCore.Models.Product>
@{
    ViewData["Title"] = "BuyNow";
}

<h1>BuyNow</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            var itemImage = item.Name + ".jpeg";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
           
            <td>
                <img src="~/images/@itemImage" />
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <label>Total Cart value</label> <b> :@ViewBag.Cost </b>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuyNow" method="post">
            
            <div class="form-group">
                <input type="submit" value="Buy Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

